<!-- Benefits Card -->
<div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Benefits</div>
                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">{{roundNumber2 benefits}} EUR
                    </div>
                </div>
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Percentage</div>
                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">{{roundNumber2 percentBenefits}} %</div>
                </div>
                <div class="col-auto">
                    <i class="fa fa-line-chart fa-2x text-gray-300"></i>
                </div>
            </div>
        </div>
    </div>
</div>
